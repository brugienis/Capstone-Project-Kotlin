<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/helpScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Fragment name"
        android:layout_gravity="center"
        android:textSize="@dimen/list_view_line1_magnified_text_size_sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/black" />


    <Space
        android:layout_width="wrap_content"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/helpShowMoreLess"
            android:scaleType="center"
            android:layout_width="@dimen/touchable_size"
            android:layout_height="@dimen/touchable_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_stock_expand_more_green_500"
            tools:ignore="ContentDescription,PrivateResource"/>

        <TextView
            android:id="@+id/helpScreenContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fragment help text"
            android:textSize="@dimen/list_view_line1_magnified_text_size_sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>
